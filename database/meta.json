{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Meta",
  "description": "Meta de leitura definida por um leitor",
  "type": "object",
  "properties": {
    "idMeta": {
      "description": "O identificador único da Meta",
      "type": "integer",
      "minimum": 1
    },
    "idLeitor": {
      "description": "O identificador do Leitor que definiu a meta",
      "type": "integer",
      "minimum": 1
    },
    "nome": {
      "description": "Nome da meta",
      "type": "string"
    },
    "dataInicio": {
      "description": "Data que iniciou a meta",
      "type": "string",
      "format": "date"
    },
    "dataTermino": {
      "description": "Data limite para atingir a meta",
      "type": "string",
      "format": "date"
    },
    "qtdLivros": {
      "description": "Quantidade de livros na meta",
      "type": "string",
      "format": "date"
    },
    "pagLidas": {
      "description": "Quantidade de páginas lidas na meta",
      "type": "string",
      "format": "date"
    },
    "tag": {
      "description": "Tag da meta",
      "type": "string",
      "format": "date"
    }
  },
  "required": ["idMeta", "idLeitor", "nome"]
}

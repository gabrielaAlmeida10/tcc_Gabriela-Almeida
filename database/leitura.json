{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Leitura",
  "description": "Registro de uma leitura realizada por um leitor",
  "type": "object",
  "properties": {
    "idLivro": {
      "description": "O identificador do Livro que foi lido",
      "type": "integer",
      "minimum": 1
    },
    "idLeitor": {
      "description": "O identificador do Leitor que realizou a leitura",
      "type": "integer",
      "minimum": 1
    },
    "idLeitura": {
      "description": "O identificador único da Leitura",
      "type": "integer",
      "minimum": 1
    },
    "totalPag": {
      "description": "Total de páginas do Livro",
      "type": "number"
    },
    "pagLidas": {
      "description": "Páginas Lidas do Livro",
      "type": "number"
    },
    "progresso": {
      "description": "Progresso da Leitura, baseado no total de páginas e páginas lidas",
      "type": "number"
    },
    "dataInicio": {
      "description": "Data de início da leitura",
      "type": "string",
      "format": "date"
    },
    "dataTermino": {
      "description": "Data de término da leitura",
      "type": "string",
      "format": "date"
    },
    "citacoes": {
      "description": "Citações do Livro",
      "type": "string"
    },
    "meta": {
      "description": "Meta que a leitura faz parte",
      "type": "string",
      "format": "date"
    },
    "formato": {
      "description": "Formato do Livro",
      "type": "string"
    }
  },
  "required": ["idLeitura", "idLeitor", "idLivro", "totalPag"]
}

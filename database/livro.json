{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Livro",
  "description": "Um livro disponível para leitura",
  "type": "object",
  "properties": {
    "idLivro": {
      "description": "O identificador único do Livro",
      "type": "integer",
      "minimum": 1
    },
    "idLeitor": {
      "description": "O identificador do Leitor que realizou a leitura",
      "type": "integer",
      "minimum": 1
    },
    "titulo": {
      "description": "Título do livro",
      "type": "string"
    },
    "capa": {
      "description": "URL para a foto da capa do livro, armazenada em local externo",
      "type": "string",
      "format": "uri"
    },
    "autor": {
      "description": "Autor do livro",
      "type": "string"
    },
    "arquivo": {
      "description": "URL para o arquivo do Livro, armazenado em local externo",
      "type": "string",
      "format": "uri"
    },
    "paginas": {
      "description": "Total de páginas do livro",
      "type": "integer",
      "minimum": 0
    },
    "status": {
      "description": "Status do livro",
      "type": "string"
    },
    "editora": {
      "description": "Editora do livro",
      "type": "string"
    },
    "saga": {
      "description": "Saga do livro",
      "type": "string"
    },
    "genero": {
      "description": "Genero do livro",
      "type": "string"
    },
    "isbn": {
      "description": "Código ISBN do livro",
      "type": "string"
    }
  },
  "required": ["idLivro", "titulo", "autor", "paginas"]
}

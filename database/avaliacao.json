{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Avaliação",
  "description": "Avaliação de um livro realizada por um leitor",
  "type": "object",
  "properties": {
    "idAvaliacao": {
      "description": "O identificador único da Avaliação",
      "type": "integer",
      "minimum": 1
    },
    "idLeitura": {
      "description": "O identificador da Leitura avaliada",
      "type": "integer",
      "minimum": 1
    },
    "nota": {
      "description": "Nota dada pelo leitor ao livro",
      "type": "number",
      "minimum": 0,
      "maximum": 5
    },
    "avaliacao": {
      "description": "Avaliação do leitor sobre o livro",
      "type": "string"
    }
  },
  "required": ["idAvaliacao", "idLeitura", "nota"]
}
